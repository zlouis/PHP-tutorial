//switch cases

$fruits = "grape fruit";

switch ($fruits) {
  case "oranges": 
    echo "you've bought oranges";
    break;
  case "grapes":
    echo "you've bought grapes";
    break;
   case "grape fruit":
    echo "You've bought grape fruit";
    break;
  default: 
    echo "you didn't buy anything";
    }

//to instantiate variable use $
$orange = "Big juicey orange from a Florida tree.";

echo $orange;
